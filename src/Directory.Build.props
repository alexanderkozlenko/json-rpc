<Project>
  <PropertyGroup>
    <RepositoryDirectory>$([MSBuild]::NormalizeDirectory($(MSBuildThisFileDirectory)..))</RepositoryDirectory>
    <SolutionDirectory>$(MSBuildThisFileDirectory)</SolutionDirectory>
  </PropertyGroup>
  <PropertyGroup>
    <IsPackable>false</IsPackable>
    <IsTestable>false</IsTestable>
    <HighEntropyVA>true</HighEntropyVA>
    <TieredCompilation>true</TieredCompilation>
    <AssemblyOriginatorKeyFile>$(SolutionDirectory)\Open.snk</AssemblyOriginatorKeyFile>
    <BaseIntermediateOutputPath>$(RepositoryDirectory)obj\$(MSBuildProjectName)</BaseIntermediateOutputPath>
    <BaseOutputPath>$(RepositoryDirectory)bin\$(MSBuildProjectName)</BaseOutputPath>
    <TreatWarningsAsErrors Condition="'$(ContinuousIntegrationBuild)' == 'true'">true</TreatWarningsAsErrors>
  </PropertyGroup>
  <PropertyGroup>
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>
  <PropertyGroup>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  <PropertyGroup>
    <EnableCodeCoverage Condition="'$(ContinuousIntegrationBuild)' == 'true' or '$(VSTestNoBuild)' != 'true'">true</EnableCodeCoverage>
    <EnableCodeCoverageReport Condition="'$(ContinuousIntegrationBuild)' != 'true' and '$(EnableCodeCoverage)' == 'true'">true</EnableCodeCoverageReport>
  </PropertyGroup>
  <PropertyGroup>
    <CollectCoverage>$(EnableCodeCoverage)</CollectCoverage>
    <CoverletOutputFormat>cobertura</CoverletOutputFormat>
    <Exclude>[*.UnitTests]*</Exclude>
    <UseSourceLink>$(ContinuousIntegrationBuild)</UseSourceLink>
  </PropertyGroup>
</Project>